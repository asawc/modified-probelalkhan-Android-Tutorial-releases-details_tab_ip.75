<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color">

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        /*android:layout_toEndOf="@+id/id">*/

        <TextView
            android:id="@+id/id"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/first_line"
            android:layout_alignBottom="@+id/second_line"
            android:gravity="center_horizontal|center_vertical"
            android:padding="1dp"
            android:text="Id"
            android:textAlignment="center"
            android:textSize="@dimen/release_list_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:padding="1dp"
            android:text="Product name"
            android:textAlignment="center"
            android:textSize="@dimen/release_list_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/requested_quantity"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:padding="1dp"
            android:text="Requested product quantity"
            android:textAlignment="center"
            android:textSize="@dimen/release_list_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_order_status"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:padding="1dp"
            android:text="Status"
            android:textAlignment="center"
            android:textSize="@dimen/release_list_item_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_line"
        android:orientation="horizontal">
        /*android:layout_toEndOf="@+id/id"*/


    </LinearLayout>


</RelativeLayout>